<div id="Grid">
    <table class="table">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.listeCourrier[0].CourrierDestinataire.Courrier.Objet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.listeCourrier[0].CourrierDestinataire.Courrier.Reference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.listeCourrier[0].CourrierDestinataire.Courrier.Commentaire)
            </th>
            <th>
                Pièce Jointe
            </th>
            <th>
                @Html.DisplayNameFor(model => model.listeCourrier[0].CourrierDestinataire.Courrier.DateCreation)
            </th>
            <th>
                Expéditeur
            </th>
            <th>
                @Html.DisplayNameFor(model => model.listeCourrier[0].CourrierDestinataire.Courrier.Recepteur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.listeCourrier[0].CourrierDestinataire.Courrier.Flag)
            </th>
            <th>
                Destinataire
            </th>
            <th>
                Status
            </th>
            <th>
                Responsable
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listeCourrier)
        {
            <tr>
                <td>
                    <a href="@Url.Page("Historique", new { id = item.IdCourrierDestinataire, idDepartement = item.CourrierDestinataire.IdDepartementDestinataire, idStatut = item.IdStatut })">
                        @Html.DisplayFor(modelItem => item.IdCourrierDestinataire)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourrierDestinataire.Courrier.Objet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourrierDestinataire.Courrier.Reference)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourrierDestinataire.Courrier.Commentaire)
                </td>
                <td>
                    @{
                        var fileName = System.IO.Path.GetFileName(item.CourrierDestinataire.Courrier.Fichier);
                    }
                    @fileName
                </td>
                <td>
                    @item.CourrierDestinataire.Courrier.DateCreation.ToString()

                </td>
                @if (item.CourrierDestinataire.Courrier.ExpediteurInterne != null)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.CourrierDestinataire.Courrier.ExpediteurInterne.Designation)
                    </td>
                }
                else
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.CourrierDestinataire.Courrier.ExpediteurExterne)
                    </td>
                }

                <td>
                    @Html.DisplayFor(modelItem => item.CourrierDestinataire.Courrier.Recepteur.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourrierDestinataire.Courrier.Flag)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.CourrierDestinataire.Departement.Designation)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Statut.Designation)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Utilisateur.Nom)*@
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

